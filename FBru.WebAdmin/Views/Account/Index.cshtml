@model FBru.WebAdmin.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Login";
}
<html>
<head>
    <title>@ViewBag.Title - FBru</title>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/content/lib")
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<!-- WRAPPER -->
<div id="wrapper">
    <div class="vertical-align-wrap">
        <div class="vertical-align-middle">
            <div class="auth-box ">
                <div class="left">
                    <div class="content">
                        <div class="header">
                            <h1 class="text-center fbru-brand">
                                F<span>BRU</span> <span style="color: #000000; font-size: 24px;">LOGIN</span>
                            </h1>
                        </div>
                        @using (Html.BeginForm("Login", "Account", FormMethod.Post, new {role = "form", @class = "form-auth-small"}))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email)
                                @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "Email"})
                                @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Password)
                                @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = "Password"})
                                @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                            </div>
                            <input type="submit" value="LOGIN" class="btn btn-lg btn-success btn-block">
                            <div class="form-group">
                                <p class="text-danger">@Html.ValidationSummary(true, string.Empty, new {@class = "text-danger"})</p>
                            </div>
                        }
                    </div>
                </div>
                <div class="right">
                    <div class="overlay"></div>
                    <div class="content text">
                        <h1 class="heading">
                            <b>FBRU ADMIN CONTROL PANEL</b>
                        </h1>
                        <p>welcome to</p>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>
    </div>
</div>
<!-- END WRAPPER -->
@Scripts.Render("~/bundles/lib")
</body>
</html>