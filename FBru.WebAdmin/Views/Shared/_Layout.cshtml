<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - FBru Admin Control Panel</title>
    @Styles.Render("~/content/lib")
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700" rel="stylesheet">
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("styles", false)
</head>
<body>
<!-- WRAPPER -->
<div id="wrapper">
    <!-- NAVBAR -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="navbar-brand">
            <h1 class="fbru-brand" style="bottom: 15px; position: relative;">
                F<span>BRU</span>
            </h1>
        </div>
        <div class="container-fluid">
            <div class="navbar-btn">
                <button type="button" class="btn-toggle-fullwidth">
                    <i class="fa fa-arrow-circle-left" aria-hidden="true"></i>
                </button>
            </div>
            <div id="navbar-menu">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="@Url.Action("Logout", "Account")">
                            <i class="fa fa-sign-out" aria-hidden="true"></i> <span>Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- END NAVBAR -->
    @Html.Partial("_LeftNavbarPartial")
    <!--BEGIN MAIN-->
    <div class="main">
        <!-- MAIN CONTENT -->
        <div class="main-content">
            <div class="container-fluid">
                <div class="panel panel-headline">
                    <div class="panel-heading">
                        <h1 class="panel-title">@ViewBag.Title</h1>
                        <p class="panel-subtitle">@ViewBag.SubTitle</p>
                    </div>
                    <div class="panel-body">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END MAIN -->
    <div class="clearfix"></div>
    <footer>
        <div class="container-fluid">
            <p class="copyright">&copy; 2017 FBru. All Rights Reserved. Themes by Theme I Need</p>
        </div>
    </footer>
</div>
@Scripts.Render("~/bundles/lib")
<script>
    $(document).ready(function() {
        var button = $(".nav a").filter(function() {
            var pathName = window.location.pathname.split("/")[1];
            return this.href === window.location.origin + "/" + pathName;
        }).addClass("active");
    });
</script>
@RenderSection("scripts", false)
</body>
</html>